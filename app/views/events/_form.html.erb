<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(event.errors.count, 'error') %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  Name: <%= form.text_field :name %><br>
  Description: <%= form.text_area :description %><br>
  Start Date <%= form.date_field :start_date, min: DateTime.current.to_date %><br>
  End Date: <%= form.date_field :end_date, min: DateTime.current.to_date %><br>
  Fee Status:  <%= form.select :fee_status, Event::VALID_FEE_STATUS  %><br>
  <div class='actions'>
    <%= form.submit %>
  </div>
<% end %>
